  "server": {
    "defaultPort": 3200,
    "apiPrefix": "/server",
    "healthCheck": "/server",
    "environment": {
      "development": {
        "port": 3200,
        "command": "npm run start:dev"
      },
      "production": {
        "port": 3200,
        "command": "npm run start:prod"
      }
    }
  },
  "endpoints": {
    "health": "GET /server",
    "auth": {
      "login": "POST /server/auth/login",
      "profile": "GET /server/auth/profile",
      "logout": "POST /server/auth/logout"
    },
    "users": {
      "list": "GET /server/users",
      "create": "POST /server/users",
      "get": "GET /server/users/:id",
      "update": "PATCH /server/users/:id",
      "delete": "DELETE /server/users/:id",
      "byEmail": "GET /server/users/email/:email",
      "byUsername": "GET /server/users/username/:username"
    }
  },
  "authentication": {
    "required": ["users", "roles", "admin"],
    "optional": [],
    "public": ["auth.login", "health"],
    "tokenType": "JWT",
    "headerName": "Authorization",
    "headerPrefix": "Bearer "
  }
}